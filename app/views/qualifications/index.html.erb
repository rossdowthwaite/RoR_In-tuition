<% @heading = 'Qualifications'  %>
<%= render 'layouts/header' %>

<%= link_to 'Back to profile', current_user.profile %><br><br>

    <% @qualifications.each do |qualification| %>

        <div id="list_tab", class="standard">

          <div id='list_tab_icon'>
              <center><i class="fa fa-trophy fa-2x tab_icons"></i></center>
          </div>

          <div id='list_tab_title'>
            <%= qualification.quality %>
          </div>
          
          <div id="list_tab_action">
            <center><%= link_to raw('<i class="fa fa-trash-o fa-2x tab_icons"></i>'), qualification, method: :delete, data: { confirm: 'Are you sure?' }  %></center>
          </div>

          <div id="list_tab_action">
            <center><%= link_to raw('<i class="fa fa-wrench fa-2x tab_icons"></i>'), edit_qualification_path(qualification) %></center>
          </div>

        </div>

    <% end %>


<br>

<%= link_to 'New Qualification', new_qualification_path, :class => 'btn btn-inverse my_button'%>
