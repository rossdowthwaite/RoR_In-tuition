<%= render "admin/admin_header" %>

<!-- Form used to add an administrator -->

<div id="new_admin">
  <h3>New Administrator</h3>

  <%= form_for(@admin_user) do |f| %>
    <% if @admin_user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :is_admin, :value => true %>

    <div class="field">
      <%= f.label :title, :class => 'my_label' %>
      <%= f.text_field :title, :class => 'my_field' %>
    </div>
    <div class="field">
      <%= f.label :username, :class => 'my_label' %>
      <%= f.text_field :username, :class => 'my_field' %>
    </div>
    <div class="field">
      <%= f.label :email, :class => 'my_label' %>
      <%= f.text_field :email, :class => 'my_field' %>
    </div>
    <div class="field">
      <%= f.label :dob, :class => 'my_label' %>
      <%= f.text_field :dob, :class =>"datepicker my_field"  %>
    </div>
    <div class="field">
      <%= f.label :password, :class => 'my_label' %>
      <%= f.password_field :password, :class => 'my_field' %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, :class => 'my_label' %>
      <%= f.password_field :password_confirmation, :class => 'my_field' %>
    </div>
    <div class="actions">
      <%= f.submit :class => 'btn btn-primary my_button'%>
    </div>
  <% end %>
</div>