<%= render "admin_header" %>

<h3>Listing All posts</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.title %></td>
        <td><%= auto_link(simple_format(post.content)) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>