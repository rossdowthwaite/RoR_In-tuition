<%= render "admin_header" %>

<h3>Listing All Uploads</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>user</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= upload.title %></td>
        <td><%= upload.user.title %></td>
        <td><%= link_to 'Show', upload %></td>
        <td><%= link_to 'Destroy', upload, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>