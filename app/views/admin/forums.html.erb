<%= render "admin_header" %>

<h3>Listing All Forums</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>title</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= forum.title %></td>
        <td><%= link_to 'Show', forum %></td>
        <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>