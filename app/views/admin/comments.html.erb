<%= render "admin_header" %>

<h3>Listing All Comments</h3>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>created at</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
      	<td width="300px;"><%= auto_link(simple_format(comment.content)) %></td>
        <td><%= comment.user.title %></td>
        <td><%= date(comment.created_at) %></td>
        <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>