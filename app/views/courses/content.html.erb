<% @heading = 'Content'  %>
<%= render 'layouts/header' %>


<div id="side">
			<%= link_to add_content_course_path(@course) do %> 
				<div id="tab_medium">
					<div id="dash_heading">
						<h3>Edit/Add<br>
							Content</h3>
					</div>
				</div>
			<% end %>

</div>

<div>
	<% @content.each do |content| %>

		<%= link_to course_subject_path(@course, content) do %> 
			<div id="material_subject_block">
				<div id='with_tab'>
					<center><i class="fa fa-file fa-2x tab_icons"></i></center>
				</div>
				<div id='material_title'>
					<%= content.title %>
				</div>
			</div>
		<% end %>

		<% content.topics.each do |topic| %>


			<%= link_to course_subject_topic_path(@course, content, topic) do %>
			<div id="material_sub_topic_block">
				<div id='with_tab'>
					<center><i class="fa fa-file-text fa-2x tab_icons"></i></center>
				</div>
				<div id='material_title'>
					<%= topic.title %>
				</div>	
			</div>
		<% end %>

		<% end %>
	<% end %>
</div>